<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/greywhite"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:id="@+id/F_img_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/circleshape_y" />

    <ImageView
        android:id="@+id/F_img_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/F_img_1"
        android:text="Did you forgot your password?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/F_txt_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/F_txt_1"
        android:text="If you don't remember your password, type your email and we will send you a message to reset your password."

        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/black"
        android:id="@+id/F_txt_2"/>

    <ImageView
        android:layout_width="168dp"
        android:layout_height="152dp"
        android:layout_below="@+id/F_txt_2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/forgot_img"
        android:id="@+id/F_img_3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/F_img_3"
        android:id="@+id/F_lila">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Enter yout Email"
            android:background="@drawable/button_shape"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/white"
            android:id="@+id/F_email"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/F_lila"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:text="Send Me an Email"
        android:textColor="@color/white"
        android:background="@drawable/button_shape"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsbold"
        android:id="@+id/F_btn_1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/F_btn_1"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maybe don't have an account? "
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign Up"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="12sp"
            android:textColor="@color/Secondary_Color"
            android:id="@+id/F_txt_3"
            />


    </LinearLayout>

</RelativeLayout>