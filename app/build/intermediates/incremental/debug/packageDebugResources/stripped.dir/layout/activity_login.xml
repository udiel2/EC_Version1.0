<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/greywhite"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/L_img_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="-7dp"
        android:src="@drawable/circleshape" />

    <ImageView
        android:id="@+id/L_img_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L_img_1"
        android:text="Welcome Back!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/L_txt_1"/>

    <ImageView
        android:layout_width="168dp"
        android:layout_height="152dp"
        android:layout_below="@+id/L_txt_1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_img"
        android:id="@+id/L_img_3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/L_img_3"
        android:id="@+id/L_lila">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="Email"
        android:background="@drawable/button_shape"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:backgroundTint="@color/white"
        android:id="@+id/L_email"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_below="@+id/L_email"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:backgroundTint="@color/white"
        android:id="@+id/L_pass"
        />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L_lila"
        android:text="Forget Password?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="18sp"
        android:textColor="@color/Secondary_Color"
        android:id="@+id/L_txt_2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/L_txt_2"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:text="Login"
        android:textColor="@color/white"
        android:background="@drawable/button_shape"
        android:textSize="14dp"
        android:fontFamily="@font/poppinsbold"
        android:id="@+id/L_btn_1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/L_btn_1"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account yet? "
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign Up"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="12sp"
            android:textColor="@color/Secondary_Color"
            android:id="@+id/L_txt_3"
            />


    </LinearLayout>

</RelativeLayout>